<Window x:Class="DeerCuts.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeerCuts"
        mc:Ignorable="d"
        Style="{DynamicResource bgdGrey}"
        Title="Dashboard" Height="300" Width="300">
    <Grid Margin="0,0,-8,0">
        <Button x:Name="btnManageOrders" Content="Manage Orders" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Width="200" Height="70" FontSize="16" Click="btnManageOrders_Click"/>
        <Button x:Name="btnManageClients" Content="Manage Clients" HorizontalAlignment="Left" Margin="50,95,0,0" VerticalAlignment="Top" Width="200" Height="70" FontSize="16" Click="btnManageClients_Click"/>
        <Button x:Name="btnGenerateReports" Content="Generate Reports" HorizontalAlignment="Left" Margin="50,170,0,0" VerticalAlignment="Top" Width="200" Height="70" FontSize="16" Click="btnGenerateReports_Click"/>

    </Grid>
</Window>
